{
  "name": "@balance-pl/lego",
  "description": "Design System for developing cool interfaces in Balance-Platform",
  "version": "0.0.0",
  "main": "index.js",
  "homepage": "https://balance-pl.github.io/lego",
  "scripts": {
    "build": "tsc && webpack",
    "build-storybook": "build-storybook -s public",
    "build-storybook-docs": "build-storybook  --docs",
    "check-types": "tsc --noEmit",
    "copy-files": "cp package.json dist/package.json && cp LICENSE dist/LICENSE && cp readme.md dist/readme.md",
    "copy-themes": "cp -r src/themes dist/themes",
    "eject": "react-scripts eject",
    "eslint": "eslint --ignore-path .gitignore .",
    "lint": "npm run prettier -- --write && npm run eslint -- --fix && npm run stylelint -- --fix",
    "prepare": "husky install",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(html|js|json|jsx|sass|yml)\"",
    "release": "npm run build && npm run copy-files && npm run copy-themes && npm run remove-prepare-script && npm publish dist",
    "remove-prepare-script": "node scripts/remove-prepare-script.js",
    "start": "react-scripts start",
    "storybook": "start-storybook -p 6006 -s public",
    "stylelint": "stylelint --ignore-path .gitignore \"**/*.+(css|scss)\"",
    "test": "react-scripts test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balance-pl/lego.git"
  },
  "keywords": [
    "design",
    "system",
    "ui-kit",
    "react"
  ],
  "author": "Mikhail Lipilin <lipilin.m@gmail.com>",
  "license": "MIT",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/node-logger": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.0.1",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "0.0.9",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.25",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chromatic": "^6.4.3",
    "classnames": "^2.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-storybook": "^0.5.6",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "postcss": "^8.4.6",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "sass": "^1.49.7",
    "stylelint": "^14.5.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.9.2"
  },
  "peerDependencies": {
    "prop-types": "^15.8.1",
    "react": "^17.0.2"
  }
}
